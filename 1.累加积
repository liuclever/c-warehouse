#include"stdio.h"
 main()
 {int jlj(int ,int);
  int n,a;
  printf("请输入a与n：（空格间隔）\n"); 
  scanf("%d %d",&a,&n);
  int s=jlj(a,n);
  printf("\na为%d,n为%d,s累加为%d",a,n,s);
  
 }
 
 int jlj(int a,int n)
  {int i,k=1,s=0;
   for(i=1;i<=n;i++)
   {k*=a;
   printf("\n第%d次k的值为%d\n",i,k);
   s+=k;
   }
   return s;
  }
