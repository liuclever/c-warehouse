#include"stdio.h" 
 main()
 {int i,j,t,n;
  printf("你需要输出多少层:") ;
  scanf("%d",&n);
  for(i=1;i<=n;i++)
  {for(t=n-i;t>=1;t--)
     printf(" ");
    for(j=1;j<=i;j++)
     printf("* ");
    printf("\n");
   }
  for(i=n-1;i>=1;i--)
   {for(t=1;t<=n-i;t++)
    printf(" ");
    for(j=i;j>=1;j--)
     printf("* ");
    printf("\n");
   }
}
